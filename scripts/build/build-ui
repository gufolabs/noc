#!/bin/sh
# ----------------------------------------------------------------------
# Build UI bundle
# ----------------------------------------------------------------------
# Copyright (C) 2007-2026 The NOC Project
# See LICENSE for details
# ----------------------------------------------------------------------
set -e -x

URL="https://cdn.getnoc.com/npkg/noc-ui-pkg%402.0.tar.bz2"
rm -rf ui/pkg/
curl -L "$URL" | tar jxf -
cd ui/
npm install --no-save
npm run build:micromark
npm run build:monaco
npm run build:leaflet
npm run vendor
npm run prod
