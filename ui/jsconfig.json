{
    "compilerOptions": {
        "target": "es6",
        "checkJs": false,
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "web/**/*.js",
        "scripts/**/*.js",
        "types/**/*",
        "*.js"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "pkg",
        "build",
        "dist",
        ".cache",
        "tmp",
        "test-results",
        "playwright-report",
        "tests-playwright"
    ]
}